extends header
block content
    .container
        .row.mg-top-4
            .col.flex.justify-content-center
                .container-form.material-card.material-shadow-1
                    form#formEvent.form-login.pd-1(action="/events/upload", method="post", name="newEvent", enctype="multipart/form-data")
                        .container
                            .row
                                .col.flex.justify-content-center
                                    i.fas.fa-calendar-alt.events
                            .row.mg-top-0_5
                                .col.flex.justify-content-center
                                    h5.login Events
                            .row.mg-top-2
                                .col.d-block
                                    label Title
                                    input.pd-0_5.form-control(type="text", name="title")
                            .row
                                .col.d-block
                                    label Description
                                    textarea(name="desc", cols="30", rows="10").pd-0_5.form-control
                            .row.mg-top-0_5
                                .col.d-block
                                    label(for="datetime") When?
                                    input.pd-0_5.form-control(type="date", name="datetime")
                            .row.mg-top-0_5
                                .col.d-block
                                    label(for="where") Where?
                                    select.pd-0_5.form-control(name="where", form="formEvent", required, placeholder="Select a city...")
                            .row.mg-top-0_5
                                .col.d-block
                                    label(for="address") Address
                                    input.pd-0_5.form-control(type="text", name="address")
                            .row.mg-top-1
                                .col.flex.justify-content-start
                                    label Images for this event
                            .row.mg-top-2
                                .col#imgContainer.d-iblock
                                    label#noImgLegend No images selected
                            .row.mg-top-1
                                .col
                                    progress#progress(value='0', max='100', name="loader", data-load='Waiting for files...')
                            .row.mg-top-2
                                .col.flex.justify-content-center
                                    label.upload-tag.pd-0_5.btn(for='imgEvent')
                                        i.fas.fa-upload
                                        | &nbsp;
                                        | Upload images 
                                    input#imgEvent.form-control(type="file", name="img[]", multiple)
                            .row.mg-top-1
                                .col.d-block
                                    button.btn(type="submit") Create
                            .row.mg-top-2
                                .col.flex.justify-content-center
                                    span Copyrigth &copy; 2018 - All rights reserved
                            .row
                                .col.flex.justify-content-center
                                    span Powered with&nbsp;
                                        i.fas.fa-heart.heart
                                        | &nbsp;by UnderNode LLC 